<%= render 'splashes/background' %>

<div class="container-fluid">
  <div id="foreground">
    <h1>Sign in</h1>
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Sign in", class: "btn btn-signup" %>
        <% end %>
    <p>New user? <%= link_to "Sign up now!", signup_path, class: "simple-link" %></p>
  </div>
</div>